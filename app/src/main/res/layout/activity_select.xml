<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SelectActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_logo"
        />
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_back"
        android:layout_marginTop="15dp"
        android:padding="2dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/background_button"
            android:src="@drawable/image"
            android:layout_marginBottom="15dp" />
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_one"
            app:layout_constraintEnd_toEndOf="@id/iv_one"
            android:text="새로운 캐릭터 만들기"
            android:textColor="@color/white"
            android:fontFamily="@font/scdream"
            android:textSize="14dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/background_button"
        android:src="@drawable/image"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top" />

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_two"
        app:layout_constraintStart_toStartOf="@id/iv_two"
        app:layout_constraintEnd_toEndOf="@id/iv_two"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/scdream"
        android:text="캐릭터와의 대화 만들기"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/iv_comu"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@drawable/background_button"
        android:src="@drawable/image"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/tv_two" />

    <TextView
        android:id="@+id/tv_comu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_comu"
        app:layout_constraintStart_toStartOf="@id/iv_comu"
        app:layout_constraintEnd_toEndOf="@id/iv_comu"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/scdream"
        android:text="다른 사람들의 작품 보기"
        android:textSize="14dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>